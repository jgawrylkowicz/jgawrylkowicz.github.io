    z-index: -1;
  }

  .post_entry-module:hover::after{
    opacity: 1;
  }


  #scheme-Isolation .post_entry-excerpt,
  .post-content, .post-content p{
    font-size: 1.2rem;
    line-height: 1.5;
    text-align: justify;
  }

