  }
  .post_entry-tags-list-item:hover{
      border-color: rgba(0,0,0,0.4) !important;
  }

  .git-button  {
    border: 1px solid #8e6677;
    border-image-slice: 3;
    font-family: Colfax Medium;
    font-size: 1.2rem;
    background: transparent;
    border-radius: 6px;
    background-size: 200% auto;
    padding: 1rem 3rem 1rem 3rem;
    text-align: center;
    color:  rgba(142, 102, 119, 0.8);
    transition: all .3s linear;
    -webkit-transition: all .3s linear;
    -o-transition: all .3s linear;
    -moz-transition: all .3s linear;
    text-decoration: none;

  }

  .git-button:hover {
    background-image: linear-gradient(to right, rgba(107, 79, 187, 0.4) 0%, rgba(142, 102, 119, 1) 51%, rgba(107, 79, 187, 0.4) 100%);
    background-color: rgba(142, 102, 119, 1);
    color: white;
    border: 1px solid transparent;
  }

  .button-wrapper{
    padding-top: 1.5pc;
    padding-bottom: 0pc;
    z-index:-1;
  }

  div.post_thumbnail-custom{
      /*
